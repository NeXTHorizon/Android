<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/node_info" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tab_accounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:drawableTop="@drawable/accounts"
            android:text="@string/accounts"
            android:textColor="#000000"
            android:textSize="14.0dip" />

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:background="#888899"
            />
        
        <TextView
            android:id="@+id/tab_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:drawableTop="@drawable/addresses"
            android:text="@string/addresses"
            android:textColor="#000000"
            android:textSize="14.0dip" />

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:background="#888899"
            />

        <TextView
            android:id="@+id/tab_tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/tools"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/tools"
            android:textColor="#000000"
            android:textSize="14.0dip" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >
        
        <View
            android:id="@+id/cursor"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1.48"
            android:background="#289548" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="3.0"
            android:background="#00000000" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:background="#eeeeee"
        android:layout_weight="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFFFFF" >

        </android.support.v4.view.ViewPager>

    </FrameLayout>
    
    <include layout="@layout/nhz_price_bar" />
</LinearLayout>
